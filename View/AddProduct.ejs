<%- include('includes/head.ejs') %>
<%- include('includes/navigation.ejs') %>

    <main>
        <div class="container">
            <div class="row">
               <div class="col-md-12">
            <h2><%= (edit)? 'Edit Product':'Add Product' %></h2>
            <form method="POST" action="<%= (edit)? '/product/edit':'/products/add'%>">
                <%if(edit){%>
                    <input type="hidden" name="productId" value="<%= product.id %>" />
                <%}%>
            <p>
                <label for=title>Title</label>
                <input type="text" name="title" class="form-control" value="<%= (edit)? product.title:''%> "/>
            </p>
            

                <p>
                    <label for="image">Image Url</label>
                    <input type="text" name="image" class="form-control" value="<%= (edit)? product.image: ''%> "/>
                </p> 
                    
                
                    <p>
                        <label for="price">Price</label>
                        <input type="number" step="any" name="price" class="form-control" 
                        value="<%= (edit)? product.price : ''%> "/>
                    </p> 
                    
                    <p>
                        <label for="description">Description</label>
                    <input type="text" id="description" name="description" class="form-control"
                        value="<%= (edit)? product.description : ''%>" />
                    </p> 
                    
                    <p><button><%= (edit)? 'Edit Product':'Add Product' %></button></p>
            </form>
            </div> 
            </div>
        </div>
    </main>
    <%- include('includes/footer.ejs') %>